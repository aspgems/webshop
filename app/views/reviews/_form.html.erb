<%= form_for [product, product.reviews.build] do |f| %>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_field :summary %>
  </div>

  <div class="field">
    <%= f.label :rating %><br />
    <%= f.select :rating, rating_options_for_select %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
